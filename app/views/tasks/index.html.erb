<h1>Listing tasks</h1>
<h2><%= Delayed::Job.count %> Jobs Remaining</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Goals</th>
    <th>accomplishments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.goals %></td>
    <td><%= task.accomplishments.count %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

