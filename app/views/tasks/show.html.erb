<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Goals:</b>
  <%= @task.goals %>
</p>
<p>
  <b>Accomplishments:</b>
  <%= @task.accomplishments.count %>
  <b>Where string != 5 :</b>
  <%= @task.accomplishments.where(:arbitrary_string.ne => '5').count %>
  <b>Where array != 5 :</b>
  <%= @task.accomplishments.where(:arbitrary_array.ne => [0, 1, 2, 3, 4]).count %>
</p>
<table>
  <tr>
    <th>Array Length</th>
    <th>String</th>
    <th>id</th>
  </tr>
<% @task.accomplishments.each do |acc| %>
  <tr>
    <td><%= acc.arbitrary_array.length %></td>
    <td><%= acc.arbitrary_string %></td>
    <td><%= acc.id %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
